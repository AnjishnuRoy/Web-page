function validateForm() {
    var x = document.forms["myForm"]["fname"].value;
    if (x == null || x == "") {
        alert("Name must be filled out");
        return false;
        }
     var y = document.forms["myForm"]["flocation"].value;
    if (y == null || y == "") {
        alert("location must be filled out");
        return false;
    }
     var z = document.forms["myForm"]["fdimension"].value;
    if (z == null || z == "") {
        alert("dimension must be filled out");
        return false;
    }
}
</script>

